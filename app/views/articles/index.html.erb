<div class="col-12 col-md-9">
  <%= paginate @articles %>
</div>
  <% @articles.each do |article| %>
    <div class="col-6 col-lg-4">
      <h2><%= article.title %></h2>
        <p><i>Published <%= distance_of_time_in_words(article.created_at, Time.now) %> ago</i></p>
        <%= image_tag article.image_url.to_s %>
      <p><%= article.text %></p>
      <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %>
      <%= link_to 'Show', article_path(article), class: "btn btn-primary" %>
      <%= link_to 'Delete', article_path(article), class: "btn btn-danger",
              method: :delete,
              data: { confirm: 'Are you sure?' }%>
    </div>
  <% end %>

<div class="col-12 col-md-9">
  <%= paginate @articles %>
</div>
