<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <%= image_tag @article.image_url.to_s, class: "img-rounded", width: "260px" %>
      <hr>
      <h2>
        <%= @article.title %>
      </h2>

      <p>
        <%= @article.text %>
      </p>

      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary" %> |
      <%= link_to 'Back', articles_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
