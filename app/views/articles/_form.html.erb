<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, size: "60", placeholder: "Title of your Blog..." %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, size: "60x10", placeholder: "Your Blog text goes here..." %>
  </p>

  <p>
    <%= f.submit "Publish", class: 'btn btn-primary' %>
  </p>
<% end %>

